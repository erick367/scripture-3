  Future<void> _handleSave() async {
    final text = _reflectionController.text.trim();
    if (text.isEmpty) return;

    HapticFeedback.lightImpact();
    
    final aiMemoryEnabled = ref.read(aiMemoryEnabledProvider);
    
    try {
      // Use new Drift-first repository with verse reference
      final repo = ref.read(journalRepositoryProvider);
      
      final verseRef = '${widget.keyword.word} (${widget.keyword.originalWord})';
      
      // 1. Save User Reflection
      await repo.saveEntry(
        content: text,
        aiAccessEnabled: aiMemoryEnabled,
        verseReference: verseRef,
        emotionTag: null, 
      );
      
      // 2. NEW: Save AI Interaction if an insight is loaded
      final insightState = ref.read(verseInsightProvider(widget.keyword));
      if (insightState.hasValue) {
        final insight = insightState.value!;
        final db = ref.read(appDatabaseProvider);
        
        // Construct a raw XML-like string or just the meaning/apply for now.
        // Since we don't have the raw XML from the service easily here without refactor,
        // we'll serialize the VerseInsight to JSON for storage.
        // Ideally, we'd alter the Service to return raw XML, but JSON is fine for MVP.

        final rawContent = json.encode(insight.toJson());
        
        await db.into(db.aiInteractions).insert(
          AiInteractionsCompanion.insert(
            verseReference: verseRef,
            aiResponse: rawContent,
            createdAt: DateTime.now(),
          ),
        );
      }
      
      // Show success checkmark
      ref.read(showSuccessProvider.notifier).state = true;
      
      // Clear input after 500ms
      await Future.delayed(const Duration(milliseconds: 500));
      _reflectionController.clear();
      ref.read(reflectionTextProvider.notifier).state = '';
      ref.read(showSuccessProvider.notifier).state = false;
    } catch (e) {
      // Handle error silently for now
      print('Error saving reflection: $e');
    }
  }

