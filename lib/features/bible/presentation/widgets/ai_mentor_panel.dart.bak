// AI Mentor Service provider is imported from services/ai_mentor_service.dart

// Verse Insight provider with Thread Injection
final verseInsightProvider = FutureProvider.family<VerseInsight, InsightKeyword>((ref, keyword) async {
  final service = ref.read(aiMentorServiceProvider);
  final threadInjection = ref.read(threadInjectionServiceProvider);
  
  // Simple in-memory cache
  final cache = <String, VerseInsight>{};
  final cacheKey = '${keyword.word} (${keyword.originalWord})';
  
  // ðŸ§µ Thread Injection: Fetch relevant journal context
  final relevantThreads = await threadInjection.getRelevantThreads(
    cacheKey,
    keyword.definition,
  );
  
  print('ðŸ“š Injected ${relevantThreads.length} threads into AI prompt');
  
  // Get AI-generated insight with injected threads
  return service.getVerseInsight(
    verseText: keyword.definition,
    verseReference: cacheKey,
    userThreads: relevantThreads, // Thread injection!
    cache: cache,
  );
});

// Optimistic insight provider - returns instantly
final optimisticInsightProvider = Provider.family<VerseInsight, InsightKeyword>((ref, keyword) {
  // Return smart placeholder instantly
  return OptimisticInsightProvider.getSmartPlaceholder(
    '${keyword.word} (${keyword.originalWord})',
    keyword.definition,
  );
});

// âš¡ Qwen Instant Preview Provider - AI response in ~200ms
// Shows real AI content while Claude loads the full insight
final qwenPreviewProvider = FutureProvider.family<String?, InsightKeyword>((ref, keyword) async {
  final service = ref.read(aiMentorServiceProvider);
  
  print('ðŸš€ [QWEN] Provider triggered for: ${keyword.word}');
  final providerStopwatch = Stopwatch()..start();
  
  // Get instant Qwen preview (on-device, <250ms)
  final result = await service.getInstantPreview(
    verseText: keyword.definition,
    verseReference: '${keyword.word} (${keyword.originalWord})',
  );
  
  providerStopwatch.stop();
  print('ðŸš€ [QWEN] Provider completed in ${providerStopwatch.elapsedMilliseconds}ms');
  
  return result;
});

