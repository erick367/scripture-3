   Widget _buildThreadsContent(VerseInsight insight) {
    // Trigger the journal context search
    // For now, using a dummy embedding (1536 dimensions filled with 0.0)
    // In production, this would be the actual verse embedding
    final dummyEmbedding = List<double>.filled(1536, 0.0);
    
    return FutureBuilder<List<Map<String, dynamic>>>(
      future: ref.read(apiServiceProvider.notifier).getJournalContext(dummyEmbedding),
      builder: (context, snapshot) {
        // Loading state
        if (snapshot.connectionState == ConnectionState.waiting) {
          return _buildThreadsShimmerLoading();
        }
        
        // Error state
        if (snapshot.hasError) {
          return Center(
            child: Text(
              'Error loading memories',
              style: GoogleFonts.inter(color: Colors.red, fontSize: 14),
            ),
          );
        }
        
        // Data loaded
        final memories = snapshot.data ?? [];
        
        // Trigger haptic feedback when data loads
        if (snapshot.connectionState == ConnectionState.done && memories.isNotEmpty) {
          Future.microtask(() => HapticFeedback.lightImpact());
        }
        
        // Empty state
        if (memories.isEmpty) {
          return _buildEmptyState();
        }
        
        // Display memories
        return Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              'Context Memories',
              style: GoogleFonts.inter(
                fontSize: 12,
                fontWeight: FontWeight.bold,
                color: Colors.purpleAccent,
              ),
            ),
            const SizedBox(height: 16),
            ...memories.map((memory) => _buildMemoryBubble(memory)),
          ],
        );
      },
    );
  }

