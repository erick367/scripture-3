      onTap: () {
        HapticFeedback.selectionClick();
        setState(() => _selectedIndex = index);
      },
      child: Container(
        padding: const EdgeInsets.only(bottom: 8),
        decoration: BoxDecoration(
          border: isSelected
              ? const Border(bottom: BorderSide(color: Colors.white, width: 2))
              : null,
        ),
        child: Text(
          title,
          style: GoogleFonts.inter(
            fontSize: 16,
            fontWeight: isSelected ? FontWeight.bold : FontWeight.normal,
            color: isSelected ? Colors.white : Colors.white54,
          ),
        ),
      ),
    );
  }

  Widget _buildContent() {
    final insightAsync = ref.watch(verseInsightProvider(widget.keyword));
    final optimisticInsight = ref.watch(optimisticInsightProvider(widget.keyword));
    final qwenPreview = ref.watch(qwenPreviewProvider(widget.keyword));
    
    return insightAsync.when(
      loading: () {
        // Three-tier progressive reveal:
        // 1. Optimistic placeholder (instant)
        // 2. Qwen preview (~200ms) - replaces placeholder with real AI content
        // 3. Claude full insight (3-5s) - replaces everything
        
        return Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            // Loading indicator with status
            Container(
              padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 6),
              margin: const EdgeInsets.only(bottom: 16),
              decoration: BoxDecoration(
                color: qwenPreview.hasValue && qwenPreview.value != null
                    ? Colors.green.withValues(alpha: 0.1)
                    : Colors.amber.withValues(alpha: 0.1),
                borderRadius: BorderRadius.circular(12),
                border: Border.all(
                  color: qwenPreview.hasValue && qwenPreview.value != null
                      ? Colors.green.withValues(alpha: 0.3)
                      : Colors.amber.withValues(alpha: 0.3),
                ),
              ),
              child: Row(
                mainAxisSize: MainAxisSize.min,
                children: [
                  SizedBox(
                    width: 12,
                    height: 12,
                    child: CircularProgressIndicator(
                      strokeWidth: 2,
                      valueColor: AlwaysStoppedAnimation<Color>(
                        qwenPreview.hasValue && qwenPreview.value != null
                            ? Colors.green
                            : Colors.amber,
                      ),
                    ),
                  ),
                  const SizedBox(width: 8),
                  Text(
                    qwenPreview.hasValue && qwenPreview.value != null
                        ? 'Deepening insight...'
                        : 'Generating preview...',
                    style: GoogleFonts.inter(
                      fontSize: 11,
                      color: qwenPreview.hasValue && qwenPreview.value != null
                          ? Colors.green
                          : Colors.amber,
                      fontWeight: FontWeight.w500,
                    ),
                  ),
                ],
              ),
            ),
            
            // âš¡ Qwen Preview: Show real AI content instantly
            if (qwenPreview.hasValue && qwenPreview.value != null && _selectedIndex == 0)
              _buildQwenPreviewContent(qwenPreview.value!)
            else ...[
              // Fall back to optimistic content
              if (_selectedIndex == 0) _buildMeaningContent(optimisticInsight),
              if (_selectedIndex == 1) _buildApplyContent(optimisticInsight),
              if (_selectedIndex == 2) _buildThreadsContent(optimisticInsight),
            ],
          ],
        );
      },
      data: (insight) {
        // Smoothly transition to real AI insight
        return AnimatedSwitcher(
          duration: const Duration(milliseconds: 500),
          child: Column(
            key: ValueKey(insight.naturalMeaning),
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              // Show Qwen takeaway at top if available (stays visible)
              if (qwenPreview.hasValue && qwenPreview.value != null && _selectedIndex == 0) ...[
                _buildQwenPreviewContent(qwenPreview.value!),
                const SizedBox(height: 20),
                const Divider(color: Colors.white24, height: 1),
                const SizedBox(height: 20),
              ],
              // Show Claude's full insight below
              if (_selectedIndex == 0) _buildMeaningContent(insight),
              if (_selectedIndex == 1) _buildApplyContent(insight),
              if (_selectedIndex == 2) _buildThreadsContent(insight),
            ],
          ),
        );
      },
      error: (error, stack) => _buildErrorState(error),
    );
  }
  
